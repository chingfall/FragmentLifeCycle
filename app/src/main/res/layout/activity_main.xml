<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.udnmobile.fragment.fragmentlifecycle.MainActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:name="com.udnmobile.fragment.fragmentlifecycle.InformationFragment"
        android:id="@+id/fragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/fragment_information"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Fragment"
        android:id="@+id/button_contactFragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecyclerView"
        android:id="@+id/button_recyclerView"
        android:layout_below="@+id/button_contactFragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_contactFragment"
        android:layout_alignEnd="@+id/button_contactFragment" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Google Map"
        android:id="@+id/button_googleMap"
        android:layout_below="@+id/button_recyclerView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_recyclerView"
        android:layout_alignEnd="@+id/button_recyclerView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AsyncTask"
        android:id="@+id/button_asynctask"
        android:layout_below="@+id/button_googleMap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_googleMap"
        android:layout_alignEnd="@+id/button_googleMap" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ViewPager"
        android:id="@+id/button_viewpager"
        android:layout_below="@+id/button_asynctask"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button_asynctask" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bottom Sheet MENU"
        android:id="@+id/button_bottomsheet"
        android:layout_below="@+id/button_viewpager"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button_viewpager" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DialogFragment"
        android:id="@+id/button_dialogfragment"
        android:layout_below="@+id/button_bottomsheet"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button_bottomsheet" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:id="@+id/button_test"
        android:layout_above="@+id/fragment"
        android:layout_alignParentStart="true" />

</RelativeLayout>
